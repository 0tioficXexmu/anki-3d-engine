<shaderProgram>
	<shaders>
		<shader type="vert">
			<source><![CDATA[
#include <shaders/Common.glsl>

layout(location = 0) in Vec4 in_position;
layout(location = 1) in Vec4 in_color;

layout(location = 0) out Vec4 out_color;

out gl_PerVertex
{
	Vec4 gl_Position;
};

void main()
{
	out_color = in_color;
	gl_Position = in_position;
}
			]]></source>
		</shader>

		<shader type="frag">
			<source><![CDATA[
#include <shaders/Common.glsl>

layout(location = 0) in Vec4 in_color;
layout(location = 0) out Vec4 out_color;

void main()
{
	out_color = in_color;
}
			]]></source>
		</shader>
	</shaders>
</shaderProgram>

